<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.seahawk.archerycounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Archer A"
                android:textColor="#616161"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archer_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/archer_a_x_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="/"
                    android:textColor="#000000"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/archer_a_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="48sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archer_a_last_score_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/archer_a_last_score_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/archer_a_last_score_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:onClick="scoreTenX"
                    android:padding="8dp"
                    android:text="10 x"
                    android:theme="@style/ButtonYellow"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:onClick="scoreTen"
                    android:padding="8dp"
                    android:text="10"
                    android:theme="@style/ButtonYellow"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreNine"
                android:padding="8dp"
                android:text="9"
                android:theme="@style/ButtonYellow"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreEight"
                android:padding="8dp"
                android:text="8"
                android:theme="@style/ButtonRed"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreSeven"
                android:padding="8dp"
                android:text="7"
                android:theme="@style/ButtonRed"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreSix"
                android:padding="8dp"
                android:text="6"
                android:theme="@style/ButtonBlue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreFive"
                android:padding="8dp"
                android:text="5"
                android:theme="@style/ButtonBlue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreFour"
                android:padding="8dp"
                android:text="4"
                android:theme="@style/ButtonBlack"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreThree"
                android:padding="8dp"
                android:text="3"
                android:theme="@style/ButtonBlack"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreTwo"
                android:padding="8dp"
                android:text="2"
                android:theme="@style/ButtonWhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreOne"
                android:padding="8dp"
                android:text="1"
                android:theme="@style/ButtonWhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreMiss"
                android:padding="8dp"
                android:text="M"
                android:theme="@style/ButtonWhite"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Archer B"
                android:textColor="#616161"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archer_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/archer_b_x_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:paddingRight="1dp"
                    android:text="/"
                    android:textColor="#000000"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/archer_b_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="1dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="48sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/archer_b_last_score_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/archer_b_last_score_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/archer_b_last_score_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="4dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:onClick="scoreTenX_b"
                    android:padding="8dp"
                    android:text="10 x"
                    android:theme="@style/ButtonYellow"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:onClick="scoreTen_b"
                    android:padding="8dp"
                    android:text="10"
                    android:theme="@style/ButtonYellow"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreNine_b"
                android:padding="8dp"
                android:text="9"
                android:theme="@style/ButtonYellow"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreEight_b"
                android:padding="8dp"
                android:text="8"
                android:theme="@style/ButtonRed"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreSeven_b"
                android:padding="8dp"
                android:text="7"
                android:theme="@style/ButtonRed"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreSix_b"
                android:padding="8dp"
                android:text="6"
                android:theme="@style/ButtonBlue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreFive_b"
                android:padding="8dp"
                android:text="5"
                android:theme="@style/ButtonBlue"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreFour_b"
                android:padding="8dp"
                android:text="4"
                android:theme="@style/ButtonBlack"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreThree_b"
                android:padding="8dp"
                android:text="3"
                android:theme="@style/ButtonBlack"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreTwo_b"
                android:padding="8dp"
                android:text="2"
                android:theme="@style/ButtonWhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreOne_b"
                android:padding="8dp"
                android:text="1"
                android:theme="@style/ButtonWhite"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:onClick="scoreMiss_b"
                android:padding="8dp"
                android:text="M"
                android:theme="@style/ButtonWhite"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp"
        android:minHeight="0dp"
        android:onClick="resetScores"
        android:padding="10dp"
        android:text="reset"/>

</RelativeLayout>
